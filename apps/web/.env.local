# LEDGERSG FRONTEND ENVIRONMENT CONFIGURATION
# 
# This file contains environment variables for local development.
# For production, set these in your deployment platform.

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# Django Backend API URL
# - Development: http://localhost:8000
# - Docker: http://backend:8000
# - Production: https://api.ledgersg.sg
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# NEXT.JS OUTPUT MODE
# =============================================================================

# Output mode selection:
# - "export": Static HTML export (default) - for CDN deployment
# - "standalone": Server mode - for backend integration
NEXT_OUTPUT_MODE=standalone

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT Token Configuration
# Access token expiry: 15 minutes (set in backend)
# Refresh token expiry: 7 days (HttpOnly cookie)
NEXT_PUBLIC_TOKEN_REFRESH_INTERVAL=840000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_PEPPOL=true
NEXT_PUBLIC_ENABLE_GST_F5=true
NEXT_PUBLIC_ENABLE_BCRS=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Peppol/InvoiceNow API
NEXT_PUBLIC_PEPPOL_API_URL=https://api.peppol.sg

# IRAS API (for GST filing)
NEXT_PUBLIC_IRAS_API_URL=https://api.iras.gov.sg

# =============================================================================
# DEBUGGING
# =============================================================================

# Enable React Query DevTools in development
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=true

# Log level: debug, info, warn, error
NEXT_PUBLIC_LOG_LEVEL=debug
